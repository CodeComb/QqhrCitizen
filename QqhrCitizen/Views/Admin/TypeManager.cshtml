@using PagedList
@using PagedList.Mvc
@model PagedList<QqhrCitizen.Models.TypeDictionary>
@{
    ViewBag.Title = "类型管理";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div>
    <div class="result-title">
        <h1>类型管理 <a href="/Admin/AddType">增加</a></h1>
    </div>
    <div class="result-content">

        <table class="detail-table">
            <thead>
                <tr>
                    <td>编号</td>
                    <td>名称</td>
                    <td>是否是登陆授权</td>
                    <td>所属类别</td>
                    <td>增加时间</td>
                    <td>操作</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.TypeValue</td>
                            <td>@(item.NeedAuthorize?"是":"否")</td>
                            <td>@item.Belonger</td>
                            <td>@item.Time</td>
                            <td>
                                <a href="javascript:Delete(@item.ID);">删除</a>
                                <a href="/Admin/TypeDictionaryEdit/@item.ID">编辑</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("TypeManager", new { page }))
    </div>
</div>


<script>
    function Delete(id) {
        window.location = '/Admin/TypeDictionaryDelete/' + id + '?sid=@ViewBag.SID';
    }
</script>