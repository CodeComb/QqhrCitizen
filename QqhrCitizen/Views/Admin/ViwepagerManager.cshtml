@using QqhrCitizen.Models
@{
    ViewBag.Title = "轮播管理";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <div class="result-title">
        <h1 class="head-tietle">轮播管理 <a href="/Admin/AddViwepager">增加</a></h1>
    </div>
    <div class="result-content">
        <table class="table">
            <thead>
                <tr>
                    <td>编号</td>
                    <td>标题</td>
                    <td>副标题</td>
                    <td>URL</td>
                    <td>优先级</td>
                    <td>操作</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Viwepagers as List<Viewpager>)
                {
                    <tr id="@item.ID">
                        <td>@item.ID</td>
                        <td>@item.Title</td>
                        <td>@item.Subtitle</td>
                        <td>@item.Url</td>
                        <td>@item.Priority</td>
                        <td>
                            <a href="/Admin/ViwepagerShow/@item.ID">查看详细</a>
                            <a href="javascript:deleteDialog('/Admin/ViwepagerDelete/' + @item.ID + '?sid=@ViewBag.SID',@item.ID);">删除</a>
                            <a href="/Admin/ViwepagerEdit/@item.ID">编辑</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



