@using QqhrCitizen.Models
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Joke joke = ViewBag.JokeShow;
    ViewBag.Title = "笑话修改";
}

<div>
    <div class="result-title">
        <h1 class="head-tietle">笑话修改</h1>
    </div>
    @using (Html.BeginForm("JokeEdit", "Admin", FormMethod.Post))
    {
        @Html.AntiForgerySID()
        <input value="@joke.ID" type="hidden" name="ID" />
        <table class="detail-table">
            <tr>
                <td class="row-title">内容</td>
                <td>
                    <textarea class="textbox w-3" name="Content" style="height:100px;width:300px;">@joke.Content</textarea>
                </td>
            </tr>
        </table>

        <p><input type="submit" value="保存" class="button blue" /></p>
    }
</div>
