@using QqhrCitizen.Models
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Course course = ViewBag.Course as Course;
    ViewBag.Title = course.Title;
}

<h2>课程详细  <a href="/Admin/CoursesEdit/@course.ID">修改</a></h2>

<table class="detail-table">
    <tr>
        <td class="row-title">一级分类</td>
        <td>
            @course.TypeDictionary.Belonger
        </td>
    </tr>
    <tr>
        <td class="row-title">二级分类</td>
        <td>
            @course.TypeDictionary.TypeValue
        </td>
    </tr>
    <tr>
        <td class="row-title">标题</td>
        <td>
            @course.Title
        </td>
    </tr>
    <tr>
        <td class="row-title">
            内容
        </td>
        <td>
            @course.Description
        </td>
    </tr>
    <tr>
        <td class="row-title">
            时间
        </td>
        <td>
            @course.Time
        </td>
    </tr>
    <tr>
        <td class="row-title">
            操作员
        </td>
        <td>
            @course.User.Username
        </td>
    </tr>
</table>





