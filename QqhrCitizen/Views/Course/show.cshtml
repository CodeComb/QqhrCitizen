@using QqhrCitizen.Models
@using QqhrCitizen.Models.ViewModel
@{
    Course course = ViewBag.Course as Course;
    List<vLession> lessions = ViewBag.Lessions as List<vLession>;
    List<Lession> lstLession = ViewBag.lstCourse as List<Lession>;
    ViewBag.Title = "课程简介_齐齐哈尔市民学习网";
}
<div id="d_menu" class="d-menu menu-cou">
    <div id="d_menu_c" class="d-menu-c">
        <!-- region start: menu -->
        <div id="d_headmenu" class="d-headmenu">
            <div class="body">
                <a id="headmenu_default" class="item" href="/Course/Index" target="_parent">课程首页</a>
                <a id="headmenu_discovery" class="item" href="/Course/Discovery/0" target="_parent">发现课程</a>
            </div>
        </div>
        <!-- region end: menu -->
    </div>
</div>
<div id="d_main" class="d-main" style="min-width: 1000px;">
    <div class="container">
        <div id="d_bottom" class="d-bottom" style="visibility: hidden; position: relative;">
            <div class="d-bottom-c">
                <div id="d_scrolltop" class="d-scrolltop" style="right: -70px;">
                    <span class="t" onclick="$(document.body).ScrollTo();">顶部</span>
                </div>
            </div>
        </div>
        <div class="d-row" style="padding: 20px 0 0 0;">
            <div class="d-row-c">
                <div class="d-col-2-8">
                    <div class="contentarea">
                        <!-- region start: 课程信息 -->
                        <div id="d_coursedetail" class="d-coursedetail">
                            <div class="cover">
                                <img src="/Course/ShowPicture/@course.ID" />
                            </div>
                            <div class="info">
                                <div class="title">@course.Title</div>
                                <div class="stat">
                                    <span id="info1">学习人次：@course.Browses</span>
                                </div>
                                <div class="stat">
                                    <span id="info1">分类：@course.TypeDictionary.TypeValue </span>
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <!-- region end: 课程信息 -->
                        <!-- region start: 课程简介 -->
                        <div id="d_courseintro" class="d-courseintro">
                            <div class="head">课程简介</div><div class="body">
                                <div class="area txt-justify">
                                    @course.Description;
                                </div>
                                <!--<div class="bot">
                                    <a href="javascript:;" onclick="sub_showhidepart('d_courseintro',168)">显示全部</a>
                                </div>-->
                            </div>
                        </div><!-- region end: 课程简介 --><!-- region start: 课件列表 -->
                        <hr style="border: none; height: 1px; background-color: #ccc; margin: 20px 25px 0 0;">
                        <div id="d_courseware" class="d-courseware">
                            <div class="head">课时列表</div>
                            <div class="body">
                                @foreach (var item in lessions)
                                {
                                    <div class="item" id="Ware_908">
                                        <a class="name" target="_blank" href="/Course/LessionDetails/@item.ID" title="@item.Title">@item.Title</a>
                                        <span class="hour"></span><span class="sign">@item.Browses 人学过</span>
                                    </div>
                                }
                            </div>
                        </div><!-- region end: 课件列表 -->
                        <!-- region start: 课程附件 -->
                        <!-- region end: 课程附件 -->
                        <!-- region start: 系列课程 --><!-- region end: 系列课程 -->
                        <hr style="border: none; height: 1px; background-color: #ccc; margin: 20px 25px 0 0;">
                        <!-- region start: 大家还喜欢的课程 -->
                        <div id="d_courselikebyuser" class="d-courselikebyuser">
                            <div class="head">
                                相关课程
                            </div>
                            <div class="body">
                                <div id="slide_courselikebyuser" class="slidecontainer">
                                    @if (lstLession != null)
                                    {
                                        foreach (var item in lstLession)
                                        {
                                            <div class="item">
                                                <div class="title">
                                                    <a href="/Course/Show/@item.ID" target="_blank">@item.Title</a>
                                                </div>
                                                <span class="signed">@item.Browses</span>
                                                <a class="cover" href="/Course/Course8000.html" target="_blank">
                                                    <img class="imgCoursePicM" src="/Course/ShowPicture/@item.ID">
                                                </a>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <span>暂不相关信息</span>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- region end: 大家还喜欢的课程 -->
                    <hr style="border: none; height: 1px; background-color: #ccc; margin: 20px 25px 0 0;">
                    <div id="d_coursecomment" class="d-coursecomment">
                    </div>
                </div>
                <div class="d-col-2-4">
                    <div class="contentarea">
                        <div id="Record" class="d-courseaction well">
                            @if (lessions != null)
                            {
                                <p> 开始学习课程：@lessions[0].Title</p>
                                <p style="text-align: center; border-top: 1px solid #ccc; padding-top: 20px;">
                                    <a href="/Course/LessionDetails/@lessions[0].ID" class="btn btn-big btn-orange" style="width: 150px;" target="_blank">开始学习</a>
                                </p>
                            }
                        </div>
                        <!-- region start: 学习动态 -->
                        <div id="d_learningactivitybycourse" class="d-learningactivitybycourse">
                            <div class="head">学习动态</div>
                            <div class="body">
                                <div id="feed_learningactivitybycourse" class="feedcontainer" style="top: 0px;">
                                    <div class="item">
                                        <a class="userportrait" href="#">
                                            <img class="imgMemberPicS" style="height:20px;width:20px;vertical-align:baseline;" src="/File/Images/Predefine/icon/130.jpg" onerror="this.onerror='';this.src='/file/Images/Default/member_default_120_120.jpg'">
                                        </a>
                                        <span class="gender male"></span>
                                        <span class="createtime">14天前</span>
                                        <a class="owner" href="#" title="lirongjin_01">lirongjin_01</a>
                                        <div class="content">
                                            观看了在线课程
                                            <a href="/Course/Course8052.html" title="中华养生宝典" target="_blank">中华养生宝典</a>
                                            中的：
                                            <a target="_blank" href="/Ware/Ware917.html" title="中国养生文化的特征（一）">中国养生文化的特征（一）</a>
                                        </div>
                                    </div>
                                    <!--
                                        <div class="item">
                                        <a class="userportrait" href="#">
                                            <img class="imgMemberPicS" style="height:20px;width:20px;vertical-align:baseline;" src="（课程图片路径）" onerror="this.onerror='';this.src='（错误图片路径）'">
                                        </a>
                                        <span class="gender male"></span>
                                        <span class="createtime">（发布时间）</span>
                                        <a class="owner" href="#" title="（用户昵称）">（用户昵称）</a>
                                        <div class="content">
                                            观看了在线课程
                                            <a href="/Course/Course8052.html" title="（课程名）" target="_blank">（课程名）</a>
                                            中的：
                                            <a target="_blank" href="（课程小节页面路径）" title="（课程小节名）">（课程小节名）</a>
                                        </div>
                                    </div>
                                        -->
                                </div>
                            </div>
                        </div>
                        <!-- region end: 学习动态 -->
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
</div>
