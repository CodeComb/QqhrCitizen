@using QqhrCitizen.Models
@{
    ViewBag.Title = "课程首页";
}

<input type="hidden" name="name" id="tid" value="@ViewBag.Tid" />

<div class="container" style="min-height:500px;">
    <p>
        当前位置：/<a href="/Course/Index?tid=0" class="pos">课程</a>/<a href="/Course/Index?tid=@ViewBag.Tid" class="pos">@ViewBag.Type</a>
    </p>
    <div class='block main'>
        <div class="lstCourse"></div>
        <div><p class="loadMore">下拉加载更多</p></div>
    </div>
    <div class='block sidebar'>
        <h3>热门课程</h3>
        @foreach (var item in ViewBag.Courses)
        {
            <p><a href="/Course/Show/@item.ID">[@item.Time.ToString("yyyy-MM-dd")] @item.Title</a></p>
        }
    </div>
    <div class="clr"></div>
</div>

<script>
    tid = $("#tid").val();
</script>

