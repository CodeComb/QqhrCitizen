@using QqhrCitizen.Models;
@using QqhrCitizen.Models.ViewModel;
@{
    ViewBag.Title = "图书首页_齐齐哈尔市民学习网";
    EBook ebook = ViewBag.EBooks;
}
<div id="d_menu" class="d-menu menu-bok">
    <div id="d_menu_c" class="d-menu-c">
        <!-- region start: menu -->
        <div id="d_headmenu" class="d-headmenu">
            <div class="body">
                <a class="item_selected" href="/EBook/Index" id="headmenu_default">图书首页</a>
                <a class="item" href="/EBook/Discovery/0" id="headmenu_discovery">发现图书</a>
                <!--<a id="headmenu_bookshelf" class="item" href="/book/bookshelf">我的藏书</a>-->
            </div>
        </div><!-- region end: menu -->
    </div>
</div>
<div id="d_bottom" class="d-bottom" style="visibility: hidden; position: relative;"><div class="d-bottom-c"><div id="d_scrolltop" class="d-scrolltop" style="right: -70px;"><span class="t" onclick="$(document.body).ScrollTo();">顶部</span></div></div></div>
<div class="d-row">
    <div class="d-row-c">
        <div class="d-col-2-8">
            <div class="contentarea" style="padding: 30px 0 30px 0;">
                <!-- region start: banner -->
                <div id="d_bookbanner" class="d-bookbanner" data-km-url="/Book/MainBanner">
                    <div id="d_bookbanner" class="jcarousel-wrapper">
                        <div class="jcarousel" data-jcarousel="true" data-jcarouselautoscroll="true">
                            <ul style="left: -652px; top: 0px;">
                                <li>
                                    <a href="http://read.shlll.net/Reading/Reading12683.html" target="_blank">
                                        <img src="/File/Reading/Recommend/2015/1/29/201501291602238962.jpg" width="652" height="205" alt="">
                                    </a>
                                </li>
                                <li>
                                    <a href="http://read.shlll.net/Reading/Reading12615.html" target="_blank">
                                        <img src="/File/Reading/Recommend/2015/1/13/201501131534158371.jpg" width="652" height="205" alt="">
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <p class="photo-credits"></p>
                        <a href="#" class="jcarousel-control-prev" data-jcarouselcontrol="true">‹</a>    <a href="#" class="jcarousel-control-next" data-jcarouselcontrol="true">›</a>
                        <p class="jcarousel-pagination" data-jcarouselpagination="true"><a href="#1" class="active">1</a><a href="#2" class="">2</a></p>
                    </div>
                </div><!-- region end: banner --><!-- region start: 热门图书 -->
                <div id="d_bookhot" class="d-bookhot">
                    <div class="head">
                        热门图书
                    </div>
                    <div class="body">
                        <div id="slide_bookhot" class="slidecontainer">
                            @foreach (var item in ViewBag.HotBooks as List<EBook>)
                            {
                                <div class="item">
                                    <a class="cover" href="/EBook/Show/@item.ID" target="_blank">
                                        <img style="width:110px;height:164px;" src="/EBook/ShowPicture" />
                                    </a>
                                    <div class="title trim">
                                        <a href="/EBook/Show/@item.ID" title="@item.Title" target="_blank">@item.Title</a>
                                    </div>
                                    <div class="author trim" title="">@item.Author</div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <!-- region end: 热门图书 -->
                <!-- region start: ad1 -->
                <!-- region end: ad1 -->
                <!-- region start: 最受关注 -->
                <div id="d_booknew" class="d-booknew">
                    <div class="head">
                        图书推荐
                    </div>
                    <div class="body">
                        <div id="slide_booknew" class="slidecontainer">
                            @foreach (var item in ViewBag.NewBooks as List<EBook>)
                            {
                                <div class="item">
                                    <div class="title trim">
                                        <a href="/EBook/Show/@item.ID" title="@item.Title" target="_blank">@item.Title</a>
                                    </div>
                                    <div class="star star40"></div>
                                    <div title="@item.Author" class="author trim">作者：@item.Author</div>
                                    <div class="classification  trim" title="@item.TypeDictionary.TypeValue">@item.TypeDictionary.TypeValue</div>
                                    <div class="type">&nbsp;</div>
                                    <a class="cover" href="/EBook/Show/@item" target="_blank">
                                        <img src="/Ebook/ShowPicture/@item.ID" style="width:68px;height:96px;" />
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div><!-- region end: 最受关注 --><!-- region start: 图书评论 -->

            </div>
        </div>
        <div class="d-col-2-4">
            <div class="contentarea" style="padding: 0px 0 30px 0;">
                <!-- region start: 热门标签 -->
                <div id="d_booktaghot" class="d-booktaghot">
                    <div class="head">
                        热门标签
                        <a href="/EBook/Dis" target="_parent">浏览更多 »</a>
                    </div>
                    <div class="body">
                        <div class="item">
                            <a href="/Book/Find?parms=8009A97B9D0780C5" target="_parent">文学 »</a>
                        </div>
                        <a class="subitem" href="/Book/Find?parms=1484B3909CE98454" target="_parent" title="经史子集">经史子集</a>
                        <!--
                             <div class="item">
                                 <a href="（标签页面）" target="_parent">（标签名） »</a>
                            </div>
                             <a class="subitem" href="（书详细页面路径）" target="_parent" title="（书名）">（书名）</a>
                        -->
                    </div>
                </div><!-- region end: 热门标签 --><!-- region start: 读者动态 -->
                <div id="d_bookactivity" class="d-bookactivity">
                    <div class="head">读者动态</div>
                    <div class="body">
                        <div id="feed_bookactivity" class="feedcontainer" style="top: 0px;">
                            @foreach (var item in ViewBag.LstRecord as List<vReadRecord>)
                            {
                                <div class="item">
                                    <div class="name trim">
                                        <a href="#" title="@item.User.Username">@item.User.Username</a>
                                    </div>
                                    <div class="trends trim">@item.Time 阅读了</div>
                                    <div class="book trim">
                                        <a href="/EBook/Show/@item.EBookID" title="@item.EBook.Title" target="_blank">
                                            @item.EBook.Title
                                        </a>
                                    </div>
                                    <a class="avatar" href="#">
                                        @if (item.User.Picture != null)
                                        {
                                            <img src="/User/ShowPicture/@item.UserID" style="width:48px;height:48px;">
                                        }
                                        else
                                        {
                                            <img src="~/Images/userphoto.png" style="width:48px;height:48px;">
                                        }
                                    </a>
                                </div>
                            }
                        </div>
                    </div><!-- region end: 读者动态 -->
                </div>
            </div><div class="clear"></div>
        </div>
    </div>



