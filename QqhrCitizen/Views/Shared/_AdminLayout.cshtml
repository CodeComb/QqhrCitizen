@using QqhrCitizen.Models;
@{
    User user = ViewBag.Currentuser as User;
}

<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>市民学习网 - 后台管理</title>
    <link href="~/Styles/common.css" rel="stylesheet" />
    <link href="~/Styles/admin.css" rel="stylesheet" />
    <link href="~/Styles/PagedList.css" rel="stylesheet" />
    <link href="~/Styles/datetimepicker.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.11.3.min.js"></script>
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/citizen.admin.js"></script>

</head>
<body>
    <div class="topbar-wrap white">
        <div class="topbar-inner clearfix">
            <div class="topbar-logo-wrap clearfix">
                <h1 class="topbar-logo none"><a href="#" class="navbar-brand">后台管理</a></h1>
                <ul class="navbar-list clearfix">
                    <li><a class="on" href="#">首页</a></li>
                    <li><a href="/Home/Index" target="_blank">网站首页</a></li>
                </ul>
            </div>
            <div class="top-info-wrap">
                @if (user != null)
                {
                    <ul class="top-info-list clearfix">
                        <li><a href="/User/Show/@user.ID">@user.Username</a></li>
                        <li><a href="/User/PwdEdit/@user.ID">修改密码</a></li>
                        <li><a href="/User/Logout">退出</a></li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container clearfix">
        <div class="sidebar-wrap">
            <div class="sidebar-title">
                <h1>菜单</h1>
            </div>
            <div class="sidebar-content">
                <ul class="sidebar-list">
                    <li>
                        <a href="#"><i class="icon-font">&#xe003;</i>分类管理</a>
                        <ul class="sub-menu">
                            <li><a href="/Admin/TypeManager"><i class="icon-font">&#xe008;</i>分类管理</a></li>
                            <li><a href="/Admin/AddType"><i class="icon-font">&#xe005;</i>增加分类</a></li>
                        </ul>
                    </li>
                    @if (user.Role == Role.Admin || user.Role == Role.NewsManager)
                    {
                        <li>
                            <a href="#"><i class="icon-font">&#xe018;</i>新闻管理</a>
                            <ul class="sub-menu">
                                <li><a href="/Admin/NewsManager"><i class="icon-font">&#xe017;</i>新闻管理</a></li>
                                <li><a href="/Admin/AddNews"><i class="icon-font">&#xe037;</i>增加新闻</a></li>
                                <li><a href="/Admin/TypeManager?type=0"><i class="icon-font">&#xe037;</i>分类管理</a></li>
                            </ul>
                        </li>
                    }
                    @if (user.Role == Role.Admin || user.Role == Role.CourseManager)
                    {
                        <li>
                            <a href="#"><i class="icon-font">&#xe018;</i>课程管理</a>
                            <ul class="sub-menu">
                                <li><a href="/Admin/CourseManager"><i class="icon-font">&#xe017;</i>课程管理</a></li>
                                <li><a href="/Admin/AddCourse"><i class="icon-font">&#xe037;</i>增加课程</a></li>
                                <li><a href="/Admin/TypeManager?type=4"><i class="icon-font">&#xe037;</i>分类管理</a></li>
                            </ul>
                        </li>
                    }
                    @if (user.Role == Role.Admin || user.Role == Role.EBookManager)
                    {
                        <li>
                            <a href="#"><i class="icon-font">&#xe018;</i>电子书管理</a>
                            <ul class="sub-menu">
                                <li><a href="/Admin/EBookManager"><i class="icon-font">&#xe017;</i>电子书管理</a></li>
                                <li><a href="/Admin/AddEBook"><i class="icon-font">&#xe037;</i>增加电子书</a></li>
                                <li><a href="/Admin/TypeManager?type=3"><i class="icon-font">&#xe037;</i>分类管理</a></li>
                            </ul>
                        </li>
                    }
                    @if (user.Role == Role.Admin || user.Role == Role.LinkManager)
                    {
                        <li>
                            <a href="#"><i class="icon-font">&#xe018;</i>资源链接</a>
                            <ul class="sub-menu">
                                <li><a href="/Admin/LinkManager"><i class="icon-font">&#xe017;</i>链接管理</a></li>
                                <li><a href="/Admin/AddLink"><i class="icon-font">&#xe037;</i>增加链接</a></li>
                                <li><a href="/Admin/TypeManager?type=2"><i class="icon-font">&#xe037;</i>分类管理</a></li>
                            </ul>
                        </li>
                    }
                    @if (user.Role == Role.Admin)
                    {

                        <li>
                            <a href="#"><i class="icon-font">&#xe018;</i>轮播管理</a>
                            <ul class="sub-menu">
                                <li><a href="/Admin/ViwepagerManager"><i class="icon-font">&#xe017;</i>轮播管理</a></li>
                                <li><a href="/Admin/AddViwepager"><i class="icon-font">&#xe037;</i>增加轮播</a></li>
                            </ul>
                        </li>
                    }
                    @if (user.Role == Role.Admin)
                    {

                        <li>
                            <a href="#"><i class="icon-font">&#xe018;</i>系统设置</a>
                            <ul class="sub-menu">
                                <li><a href="/Admin/ManagerManage"><i class="icon-font">&#xe017;</i>管理员管理</a></li>
                                <li><a href="/Admin/AddManager"><i class="icon-font">&#xe037;</i>增加管理员</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <!--/sidebar-->

        <div class="main-wrap">
            <div class="result-wrap">
                <div class="result-title">
                    <h1>快捷操作</h1>
                </div>
                <div class="result-content">
                    <div class="short-wrap">
                        @*<a href="#"><i class="icon-font">&#xe001;</i>新增作品</a>
                            <a href="#"><i class="icon-font">&#xe005;</i>新增博文</a>
                            <a href="#"><i class="icon-font">&#xe048;</i>新增作品分类</a>
                            <a href="#"><i class="icon-font">&#xe041;</i>新增博客分类</a>
                            <a href="#"><i class="icon-font">&#xe01e;</i>作品评论</a>*@
                    </div>
                </div>
            </div>
            <div class="result-wrap">
                @RenderBody()
            </div>
        </div>
        <!--/main-->
    </div>
</body>
</html>