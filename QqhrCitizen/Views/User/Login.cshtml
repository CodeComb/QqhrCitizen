<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="Images/logo.ico">
    <link href="~/Styles/app_home.css" rel="stylesheet" media="screen">
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/plugins.js"></script>
    <script src="~/Scripts/flproto0.1.0.js"></script>
    <script src="~/Scripts/proto.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/home.login.js"></script>
</head>
<body class="home__login">
    <div id="d_main" class="d-main" style="min-width: 1000px;">
        <div class="container">
            <div id="d_top" class="d-top">
                <div id="d_top_c" class="d-top-c">
                    <!-- region start: top -->
                    <div id="d_topmenu" class="d-topmenu">
                        <div class="d-top-nav">
                            <div class="body">
                                <a id="" class="item" href="/Home/Index">学习网首页</a>
                                <!--选中-->
                                <!--<a id="topmenu_course" class="item_selected" href="/Course/Index" target="_parent">课程</a>-->
                                <a id="topmenu_event" class="item" href="/News/Index" target="_parent">新闻</a>
                                <a id="topmenu_book" class="item" href="/Course/Index" target="_parent">课程</a>
                                <a id="topmenu_group" class="item" href="/Ebook/Index" target="_parent">电子书</a>
                                <a id="topmenu_news" class="item" href="/Live/Index" target="_parent">直播</a>
                            </div>
                        </div>
                        <div class="d-top-weather">
                            <div class="body">
                            </div>
                        </div>
                        <div id="d_top_sign" class="d-top-sign">
                            <div class="body">
                                <span class="txt">欢迎来到齐齐哈尔市民学习网</span>
                                <a class="item" href="/User/Login" target="_self">登录</a>
                                <a class="item last" href="/User/Register" target="_self">注册</a>
                            </div>
                        </div>
                    </div>
                    <!-- region end: top -->
                </div>
            </div>
            <div id="d_header" class="d-header" style="border-bottom:1px solid #f09e3d;">
                <div id="d_header_c" class="d-header-c">
                    <!-- region start: header -->
                    <div id="d_headerhome" class="d-headerhome">
                        <a class="d-logo logo-use" href="Home/Index"></a>
                        <div class="d-search"></div>
                    </div>
                    <!-- region end: header -->
                </div>
            </div>
            <div id="d_bottom" class="d-bottom" style="visibility: hidden;">
                <div class="d-bottom-c">
                    <div id="d_scrolltop" class="d-scrolltop">
                        <span class="t" onclick="$(document.body).ScrollTo();">顶部</span>
                    </div>
                </div>
            </div>
            <div class="d-row" style="margin-bottom:20px;padding:20px 0 20px 0;">
                <div class="d-row-c">
                    <div class="d-col-1">
                        <div class="contentarea">
                            <!-- region start: 登录 --><div class="d-signin">
                                <div class="head">
                                    欢迎回来
                                </div>
                                <div class="body">
                                    @using (Html.BeginForm("Login", "User", FormMethod.Post))
                                    {
                                        @Html.AntiForgerySID()
                                        <div class="d-username">
                                            <span class="i">&nbsp;</span>
                                            @Html.TextBoxFor(m => m.Username, new { @class = "int-hs logElm" })
                                            <div class="clear"></div>
                                        </div>
                                        <div class="d-password">
                                            <span class="i">&nbsp;</span>
                                            @Html.PasswordFor(x => x.Password, new { @class = "int-hs logElm" })
                                            <div class="clear"></div>
                                        </div>
                                        <script>
                                            $("#Username").attr("placeholder", "用户名");
                                            $("#Password").attr("placeholder", "密码");
                                        </script>
                                        <div class="d-vcode" style="line-height: 100%; display: none;">
                                            <span class="i">&nbsp;</span>
                                            <input type="text" class="int-hs logElm" id="vcode" style="width:140px;" name="vcode" maxlength="4" autocorrect="off" autocapitalize="off" value="" placeholder="验证码">
                                            <img id="refreshValidate" style="cursor:pointer; width:80px;" title="看不清，点击换一张" src="">
                                            <input type="hidden" id="isf" name="isf" value="1">
                                            <div class="clear"></div>
                                        </div>
                                        <div class="d-olduser">
                                            <label>
                                                <input type="checkbox" class="chk-1" id="olduser" name="olduser" checked="checked"> 是
                                            </label>
                                        </div>
                                        <!--
                                        <div class="d-forgot">
                                            <a href="Home/Forgotpwd">忘记密码？</a>
                                        </div>
                                        -->
                                        <div class="d-submit">
                                            <input type="submit" class="btn btn-orange btn-big" value="登录" style="width:300px;">
                                        </div>
                                        <div class="d-knowme">
                                            <!--<label>
                                                <input id="check_knowme" type="checkbox"> 记住我(在公共场上网所请勿勾选此项)
                                            </label>-->
                                            记住我 @Html.EditorFor(model => model.RememberMe, "1")
                                            @Html.ValidationSummary(true)
                                        </div>
                                        <div class="d-sign">
                                            <a href="/User/Register">不是学习网用户？请注册。</a>
                                        </div>
                                    }
                                </div>
                            </div><!-- region end: 登录 -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-row" style="background-color:#ececec;border-top:2px solid #474747;">
                <div class="d-row-c">
                    <div class="d-col-1">
                        <div class="contentarea">
                            <!-- region start: 帮助导航 --><div class="d-help">
                                <div style="padding: 25px;">Copyright © 2015 齐齐哈尔市广播电视大学. All Rights Reserved. 哈尔滨市码锋科技有限责任公司提供技术支持.</div>
                            </div><!-- region end: 帮助导航 -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
